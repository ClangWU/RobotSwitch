<?xml version="1.0" ?>
<launch>
  <arg name="robot_ip"               default="192.168.1.100"/>
  <arg name="load_gripper"           default="true" />
  <arg name="use_gripper_gui"        default="true" />
  <arg name="load_franka_control"    default="false" />

  <!-- Bringup franka_interactive_bringup.laucnh -->
  <group if="$(arg load_franka_control)">
    <include file="$(find franka_reactive_controller)/launch/franka_interactive.launch" >
      <arg name="robot_ip" value="$(arg robot_ip)" />
      <arg name="load_gripper" value="$(arg load_gripper)" />
      <arg name="use_gripper_gui" value="$(arg use_gripper_gui)" />
      <arg name="bringup_rviz" value="true" />
    </include>
  </group>

  <!-- Load desired controller-->  
  <arg name="stopped" default="false" />
  <rosparam command="load" file="$(find franka_reactive_controller)/config/franka_reactive_controller.yaml" />
  <node unless="$(arg stopped)" name="controller_spawner_cv" pkg="controller_manager" type="spawner" respawn="false" output="screen"  args="cartesian_velocity_node_controller"/>
  <node if="$(arg stopped)" name="controller_spawner_cv" pkg="controller_manager" type="spawner" respawn="false" output="screen"  args="--stopped cartesian_velocity_node_controller"/>
</launch>
